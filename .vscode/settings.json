{
  // 파일 권한 문제를 줄이기 위해 자동 저장을 끕니다.
  "files.autoSave": "afterDelay",
  
  // 저장 시 자동으로 코드 포맷팅하는 기능을 끕니다.
   "editor.formatOnSave": true, 

   "semi"

  // 특정 폴더를 파일 감시에서 제외하여 권한 문제를 줄입니다.
  "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true
  },
  
  // 저장 시 발생하는 파일 충돌이나 권한 문제를 무시하고 덮어씁니다.
  "files.saveConflictResolution": "overwriteFileOnDisk",
  
  // 터미널에서 실행할 때 권한 문제를 피하기 위해 터미널 설정을 수정합니다.
  "terminal.integrated.shellArgs.windows": [
      "-NoLogo",
      "-ExecutionPolicy",
      "Bypass"
  ],
  
  // 권한 문제로 발생하는 모든 오류를 콘솔에 로깅하도록 설정합니다.
  "window.showOutput": "always",

  
}
